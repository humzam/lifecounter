<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="Player 1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin">


        <TextView android:text="@string/initial_total" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/player1_total"
            android:textSize="25dp"
            android:layout_weight="1"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus1"
            android:id="@+id/player1_btn_plus1"
            android:tag="player1_btn_plus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:text="@string/btn_txt_minus1"
            android:id="@+id/player1_btn_minus1"
            android:tag="player1_btn_minus1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus5"
            android:id="@+id/player1_btn_plus5"
            android:tag="player1_btn_plus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus5"
            android:id="@+id/player1_btn_minus5"
            android:tag="player1_btn_minus5"
            android:onClick="onClick"
            android:layout_weight="1"/>


    </LinearLayout>


    <TextView
        android:text="Player 2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView android:text="@string/initial_total" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/player2_total"
            android:textSize="25dp"
            android:layout_weight="1"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus1"
            android:id="@+id/player2_btn_plus1"
            android:layout_weight="1"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus1"
            android:id="@+id/player2_btn_minus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus5"
            android:id="@+id/player2_btn_plus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus5"
            android:id="@+id/player2_btn_minus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:text="Player 3" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView android:text="@string/initial_total" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/player3_total"
            android:textSize="25dp"
            android:layout_weight="1"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus1"
            android:id="@+id/player3_btn_plus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus1"
            android:id="@+id/player3_btn_minus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus5"
            android:id="@+id/player3_btn_plus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus5"
            android:id="@+id/player3_btn_minus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player 4"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView android:text="@string/initial_total" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/player4_total"
            android:textSize="25dp"
            android:layout_weight="1"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus1"
            android:id="@+id/player4_btn_plus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus1"
            android:id="@+id/player4_btn_minus1"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_plus5"
            android:id="@+id/player4_btn_plus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_minus5"
            android:id="@+id/player4_btn_minus5"
            android:onClick="onClick"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
